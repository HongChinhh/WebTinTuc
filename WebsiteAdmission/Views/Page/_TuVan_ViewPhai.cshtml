@model IEnumerable<WebsiteAdmission.Models.Feedback>
@if (Model.Count() > 0)
{
    <div class="row3-right">
        <div class="cauhoiphobien">
            <div class="title_phobien">
                <p>Danh sách câu hỏi của: @ViewBag.PostTitle</p>
            </div>
            <div class="content_phobien">
                @foreach (var item in Model)
                {
                    <button class="accordion">@item.Title</button>
                    <div class="panel">
                        <p>@Html.Raw(item.Content)</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                /* Toggle between adding and removing the "active" class,
                to highlight the button that controls the panel */
                this.classList.toggle("active");

                /* Toggle between hiding and showing the active panel */
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }
    </script>
}
else
{
    <div class="row3-right">
        <div class="cauhoiphobien">
            <div class="title_phobien">
                <p>Chưa có câu hỏi nào trong: @ViewBag.PostTitle</p>
            </div>
            <div class="content_phobien">
                Chưa có câu hỏi nào trong @ViewBag.PostTitle
            </div>
        </div>
    </div>
}